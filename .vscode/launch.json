{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug-js-basic",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "continueOnAttach": true,
      "type": "node",
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "sourceLanguages": [
        "rust"
      ],
      "name": "debug-rust-basic",
      "program": "node",
      "args": [
        "--inspect-brk",
        "${workspaceFolder}/packages/rolldown/bin/cli",
        "--config",
        "./rolldown.config.js"
      ],
      // build before debug
      "preLaunchTask": "build rolldown",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "cwd": "${workspaceFolder}/examples/basic-vue",
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/<executable file>",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}",
      "name": "Attach:Rust",
    },
  ],
  "compounds": [
    {
      "name": "debug-basic",
      "configurations": [
        "debug-js-basic",
        "debug-rust-basic"
      ],
      "stopAll": true,
      "presentation": {
        "group": "examples",
        "order": 1
      }
    }
  ]
}